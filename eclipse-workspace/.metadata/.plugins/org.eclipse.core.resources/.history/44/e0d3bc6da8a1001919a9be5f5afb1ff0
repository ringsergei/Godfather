import java.io.FileInputStream;
import javazoom.jl.player.Player;

public class AudioDriver {
	public void play() {
        try {
        	FileInputStream fis = new FileInputStream("C:/Sleep Away.mp3");
        	Player playMP3 = new Player(fis);

        	playMP3.play();

        } catch(Exception e) {/* NOP */}
	}
}